<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroundbook"
    tools:context=".EditBookActivity"
    android:orientation="vertical">
    <TextView
        android:text="Cap nhat thong tin sach"
        android:textStyle="bold"
        android:textSize="25dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:gravity="center"
        android:textColor="@color/white"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <EditText
        android:id="@+id/update_book_name"
        android:hint="Name"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/background_user_login"
        android:layout_marginTop="10dp"
        android:drawableLeft="@drawable/baseline_drive_file_rename_outline_24"
        android:layout_width="match_parent"
        android:layout_height="40dp"/>
    <EditText
        android:id="@+id/update_book_author"
        android:hint="Author"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/background_user_login"
        android:layout_marginTop="10dp"
        android:drawableLeft="@drawable/baseline_drive_file_rename_outline_24"
        android:layout_width="match_parent"
        android:layout_height="40dp"/>
    <EditText
        android:id="@+id/update_book_price"
        android:hint="Price"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/background_user_login"
        android:layout_marginTop="10dp"
        android:drawableLeft="@drawable/baseline_drive_file_rename_outline_24"
        android:layout_width="match_parent"
        android:layout_height="40dp"/>
    <EditText
        android:id="@+id/update_book_nxb"
        android:hint="NXB"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:drawableLeft="@drawable/baseline_drive_file_rename_outline_24"
        android:background="@drawable/background_user_login"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"/>
    <EditText
        android:id="@+id/update_book_des"
        android:hint="Description"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:drawableLeft="@drawable/baseline_drive_file_rename_outline_24"
        android:background="@drawable/background_user_login"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="150dp"/>
    <Button
        android:id="@+id/update_book_update"
        android:text="update"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:backgroundTint="@color/Blue"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</LinearLayout>
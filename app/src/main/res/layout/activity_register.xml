<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegistryActivity">
    <ImageView
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:src="@drawable/green_wave"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:scaleType="centerCrop"/>

    <TextView
        android:id="@+id/activity_registry_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="35dp"
        android:text="Create A New Account"
        android:textSize="30dp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:gravity="center"/>

    <LinearLayout
        android:id="@+id/activity_registry_linear_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:orientation="vertical"
        android:padding="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/activity_registry_text">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Name:"
            android:textColor="@color/black"
            android:textStyle="bold"/>
        <EditText
            android:id="@+id/register_activity_name"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/background_user_login"
            android:hint="Enter Your Name"
            android:padding="12dp"
            android:textColor="#707070"
            android:textSize="18sp" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/activity_registry_linear_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/activity_registry_linear_name">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Email:"
            android:textColor="@color/black"
            android:textStyle="bold"/>
        <EditText
            android:id="@+id/register_activity_email"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/background_user_login"
            android:hint="Enter Your Email"
            android:padding="12dp"
            android:textColor="#707070"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/activity_registry_linear_password"
        app:layout_constraintTop_toBottomOf="@+id/activity_registry_linear_email"
        app:layout_constraintStart_toStartOf="parent"
        android:orientation="vertical"
        android:padding="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Password:"
            android:textColor="@color/black"
            android:textStyle="bold"/>
        <EditText
            android:id="@+id/register_activity_password"
            android:hint="Enter Your Password"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textSize="18sp"
            android:padding="12dp"
            android:textColor="#707070"
            android:background="@drawable/background_user_login"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/activity_registry_linear_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/activity_registry_linear_password">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Address:"
            android:textColor="@color/black"
            android:textStyle="bold"/>
        <EditText
            android:id="@+id/register_activity_address"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/background_user_login"
            android:hint="Enter Your Address"
            android:padding="12dp"
            android:textColor="#707070"
            android:textSize="18sp" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/activity_registry_linear_phone_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/activity_registry_linear_address">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Phone Number:"
            android:textColor="@color/black"
            android:textStyle="bold"/>
        <EditText
            android:id="@+id/register_activity_phone"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/background_user_login"
            android:hint="Enter Your Phone Number"
            android:padding="12dp"
            android:textColor="#707070"
            android:textSize="18sp" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/activity_registry_linear_registry"
        app:layout_constraintTop_toBottomOf="@+id/activity_registry_linear_phone_number"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">
        <Button
            android:id="@+id/register_activity_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Registry"
            android:layout_margin="20dp"
            android:backgroundTint="@color/DarkGreen"/>
        <Button
            android:id="@+id/register_activity_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:backgroundTint="@color/DarkGreen"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/SandyBrown">
    <TextView
        android:text="Sua thông tin thể loại"
        android:textColor="@color/White"
        android:textStyle="bold"
        android:textSize="20dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <EditText
        android:id="@+id/bottom_sheet_name"
        android:hint="Name"
        android:layout_marginTop="20dp"
        android:drawableLeft="@drawable/baseline_drive_file_rename_outline_24"
        android:background="@drawable/background_user_login"
        android:layout_width="match_parent"
        android:layout_height="50dp"/>
    <EditText
        android:id="@+id/bottom_sheet_des"
        android:hint="Description"
        android:layout_marginTop="20dp"
        android:drawableLeft="@drawable/baseline_drive_file_rename_outline_24"
        android:background="@drawable/background_user_login"
        android:layout_width="match_parent"
        android:layout_height="50dp"/>
    <EditText
        android:id="@+id/bottom_sheet_image"
        android:hint="Link Image"
        android:layout_marginTop="20dp"
        android:drawableLeft="@drawable/baseline_drive_file_rename_outline_24"
        android:background="@drawable/background_user_login"
        android:layout_width="match_parent"
        android:layout_height="60dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">
        <Button
            android:layout_margin="10dp"
            android:id="@+id/bottom_sheet_update"
            android:text="Update"
            android:backgroundTint="@color/Green"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <Button
            android:id="@+id/bottom_sheet_cancel"
            android:text="Cancel"
            android:layout_margin="10dp"
            android:backgroundTint="@color/Green"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</LinearLayout>